{
  "name": "nigerian-phone-number-validator",
  "version": "1.0.0",
  "description": "Small utility for validating and sanitizing nigerian phone numbers",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build"
  },
  "author": "Peter Iyiola",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "husky": "^3.1.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {},
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run build"
    }
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iyiolapeter/nigerian-phone-number-validator.git"
  },
  "keywords": [
    "Nigeria",
    "Phone",
    "Number",
    "Validator",
    "Validation",
    "Sanitizing",
    "Typescript"
  ],
  "bugs": {
    "url": "https://github.com/iyiolapeter/nigerian-phone-number-validator/issues"
  },
  "homepage": "https://github.com/iyiolapeter/nigerian-phone-number-validator#readme"
}
